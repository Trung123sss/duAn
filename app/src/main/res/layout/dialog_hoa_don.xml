<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/tvMaHDa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã hóa đơn"
        android:enabled="false"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/tvTenTVa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên thành viên"
        android:enabled="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edTuNgays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="YYYY//MM//DD"
            android:layout_weight="2"
            android:enabled="false"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/btnTuNgays"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:src="@drawable/calendar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất "
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập "
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btnthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:backgroundTint="#FF9800"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách sản phẩm"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#E30808"/>

    <ListView
        android:id="@+id/lvListSanPham"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <Button
        android:id="@+id/btnLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF9800"
        android:text="Lưu"
        android:textColor="@color/black" />


</LinearLayout>